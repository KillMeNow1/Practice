#include <stdio.h>
#include <stdlib.h>


int main(int argc, char **argv)
{
  char letter;

  letter='T';

  /* Switch statement for variable "letter" */
  switch(letter)
    {
    case 'T':
      printf("Thymine");
      break;

    case 'G':
      printf("Guanine");
      break;
      
    case 'C':
      printf("Cytosine");
      
    case 'A':
      printf("Adenosine");

    default: /* Default if none of the cases are matched */
      printf("Where did that come from?  Is your sample contaminated or are you an alien?");
      break;
    }/* switch statement */

  printf("\n");

  /****
   Alternative method:
  *****/


  if(letter == 'T')
  {
      printf("Thymine");
  }
  else if (letter == 'G')
  {
      printf("Guanine");
  }
  else if (letter == 'A')
  {
      printf("Adenosine");
  }
  else if (letter == 'C')
  {
     printf("Cytosine");
  }
  else
  {
      printf("Where did that come from?  Is your sample contaminated or are you an alien?");
  }/* if else */

  printf("\n");


  return(0);
}
